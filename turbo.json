{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "DB_URL",
        "REDIS_URL",
        "UNSUBSCRIBE_SECRET",
        "DOCS_SITE",
        "DASHBOARD_SITE",
        "API_URL",
        "WEB_URL"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "passThroughEnv": [
        "REDIS_URL",
        "DB_URL",
        "UNSUBSCRIBE_SECRET",
        "DOCS_SITE",
        "DASHBOARD_SITE",
        "API_URL",
        "WEB_URL"
      ]
    }
  },
  "globalEnv": ["IMPORTANT_GLOBAL_VARIABLE"]
}
